<div class="section1-edit">
<h2 class="h2-edit">Add your art event</h2>
<div class="row-edit">
  <div class="col-md-6">
    <form action="/events/create" method="post" enctype="multipart/form-data"> 
      <div class="form-group">
        <label>Title:
          <input type="text" name="title" class="form-control" />
        </label>
      </div>

      <div class="form-group">
        <label>Address:
          <input type="text" name="address" class="form-control" />
        </label>
      </div>

      <div class="form-group">
        <label>Date:
          <textarea name="date" cols="30" rows="4" class="form-control"> </textarea>
        </label>
      </div>
 
      <div class="form-group">
        <label>Description:
          <textarea name="description" cols="30" rows="4" class="form-control"> </textarea>
        </label>
      </div>

      <div class="form-group">
        <label>Artists:
          <input type="text" name="artists" class="form-control" />
        </label>
      </div>

      <div class="form-group">
        <label>Refreshments offer:
          <textarea name="refreshments" cols="30" rows="4" class="form-control"> </textarea>
        </label>
      </div>
 
      <div class="form-group">
        <label>Image:
          <input type="file" name="event-image" class="form-control-file" />
        </label>
      </div>
 
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
  <img class="img-edit" src="https://images.unsplash.com/photo-1617168395737-b846bf44b2b8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=988&q=80">
