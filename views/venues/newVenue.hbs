<div class="section1-edit">
<h2 class="h2-edit">Add your venue</h2>
<div class="row-edit">
  <div class="col-md-6">
    <form class="form-classic" action="/venues/create" method="post" enctype="multipart/form-data"> 
      <div class="form-group">
        <label>Name:
          <input type="text" name="name" class="form-control" />
        </label>
      </div>

      <div class="form-group">
        <label>Address:
          <input type="text" name="address" class="form-control" />
        </label>
      </div>
 
      <div class="form-group">
        <label>Description:
          <textarea name="description" cols="30" rows="4" class="form-control"> </textarea>
        </label>
      </div>

      <div class="form-group">
        <label>Website:
          <input type="text" name="website" class="form-control" />
        </label>
      </div>

      <div class="form-group">
        <label>Preferred exhibition topics:
          <textarea name="topic" cols="30" rows="4" class="form-control"> </textarea>
        </label>
      </div>

      <div class="form-group">
        <label>Preferred mediums:
          <textarea name="medium" cols="30" rows="4" class="form-control"> </textarea>
        </label>
      </div>

      <div class="form-group">
        <label>I offer solo or group shows:
          <input type="text" name="offer" class="form-control" />
        </label>
      </div>
 
      <div class="form-group">
        <label>Image:
          <input type="file" name="venue-image" class="form-control-file" />
        </label>
      </div>
 
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
  <img class="img-edit" src="https://images.unsplash.com/photo-1512540452972-baac55d40ef1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=988&q=80">
