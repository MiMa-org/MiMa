<h1 class="page-title">All the available venues</h1>
<a class="create-btn" href="./venues/create">Create a new venue</a>

<div class="section-pages">

<div class="row2">
  {{#each venues}}

    <div class="gallery-scroll"> 
      <figure class="gallery-item">
        <img src="{{imageUrl}}" class="card-img-top" alt="{{name}}">
          <figcaption>
          <h5 class="card-title">{{name}}</h5>
          <p class="card-text">{{address}}</p>
          <p class="card-text">{{description}}</p>
          <a class="card-link" href="url">{{website}}</a>
          <p class="card-text">{{topic}}</p>
          <p class="card-text">{{medium}}</p>
          <p class="card-text">{{offer}}</p>
          <a href="/events/{{id}}/edit" class="edit-btn">Edit</a>
          </figcaption>
          </figure>
      </div>
      
    
  {{else}}
    <p>There are no venues yet!</p>
  {{/each}}
  </div>
</div>

</body>
</html>